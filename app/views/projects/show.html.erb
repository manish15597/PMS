<p id="notice"><%= notice %></p>

<p class="form-basic form-row">
  <strong>Title:</strong><br>
  <%= @project.title %>
</p>

<p class="form-basic form-row">
  <strong>Abstract:</strong><br>
  <%= @project.abstract %>
</p>

<p class="form-basic form-row">
  <strong>Isapproved:</strong>
  <%= @project.isapproved %>
</p>

<p class="form-basic form-row">
  <strong>Course:</strong>
  <%= Course.find( @project.course_id).course_name %>
</p>

<p class="form-basic form-row">
  <strong>Team:</strong>
  <%= Team.find(@project.team_id).name %>
</p>

<div style = "text-align:center;">
  <%= link_to 'Edit', edit_project_path(@project) , :class => "button" %>
  <%= link_to 'Back', :back , :class => "button" %>
  <%= link_to 'Submission', make_submit_path(@project.id), :class => "button" if @project.isapproved == "YES" and Student.where(users_id: current_user.id).size == 1 %>

  <%= link_to 'Check Submission', show_project_submissions_path(@project.id), :class => "button" if @project.isapproved == "YES" and Faculty.where(users_id: current_user.id).size == 1 %>
</div>
