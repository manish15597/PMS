<!DOCTYPE html>
<html>
  <head>
    <title>PMS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <p class="navbar-text pull-right">


    <% if user_signed_in? and current_user.usertype == 0%>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <%= link_to "Edit Student Details", edit1_student_path, :class => 'navbar-link' %>
      <%= link_to "Choose Course", choose_course_path, :class => 'navbar-link' %>
      <%= link_to "My Courses", student_mycourse_path, :class => 'navbar-link' %>
      <%= link_to "Create Team", create_team_path, :class => 'navbar-link' %>
      <%= link_to "Add teamate", add_teammates_path, :class => 'navbar-link' %>


    <% elsif user_signed_in? and current_user.usertype == 1%>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <%= link_to "Edit Faculty Details", edit1_faculty_path, :class => 'navbar-link' %>
      <%= link_to "Create Course", create_course_path, :class => 'navbar-link' %>
      <%= link_to "My Courses", faculty_mycourse_path, :class => 'navbar-link' %>


    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
    </p>

  </body>
</html>
